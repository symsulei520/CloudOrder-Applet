/* pages/list/list.wxss */
.content-wrap {
  margin: 20rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 100rpx;
}

.wrap {
  display: flex;
  width: 100%;
  position: relative;
  padding: 10rpx 0;
}

.column {
  display: flex;
  flex-direction: column;
  margin: 20rpx 40rpx;
}
.column .product{
  padding: 20rpx 0;
}
.column .price{
  display: flex;
  align-items: center;
}
.column .price text{
  color: red;
  font-size: 50rpx;
}
.spimg {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.nubmer {
  color: red;
  padding-top: 15rpx;
}

/* 购物车数量 样式 */
.quantity {
  margin-left: auto;
  font-size: 26rpx;
  display: flex;
  position: absolute;
  bottom: 20rpx;
  right: 10rpx;
}

.quantity .op {
  border: 1rpx solid lightgrey;
  width: 40rpx;
  font-size: 32rpx;
  font-weight: 800;
  line-height: 50rpx;
  height: 50rpx;
  text-align: center;
}

.quantity .number {
  z-index: 1;
  border-top: 1rpx solid lightgrey;
  border-bottom: 1rpx solid lightgrey;
  line-height: 50rpx;
  height: 50rpx;
  text-align: center;
}

.quantity .input {
  width: 60rpx;
  text-align: center;
  height: 50rpx;
}